# Токен вашого бота від @BotFather
BOT_TOKEN=your_bot_token_here

# ID адміністратора/адміністраторів (ваш Telegram user ID)
# Для одного адміна:
ADMIN_ID=123456789
# Для кількох адмінів (розділені комами, без пробілів):
# ADMIN_IDS=123456789,987654321,111222333

# ID групи для заявок (наприклад: -1001234567890)
GROUP_ID=-1001234567890

# ID каналу для публікації заявок
APPLICATIONS_CHANNEL_ID=-1001234567890

# ID групи для публікації заходів
EVENTS_GROUP_ID=-1001234567890

# Посилання на канал (опціонально)
# CHANNEL_LINK=https://t.me/your_channel

# Файл логів (опціонально, за замовчуванням: bot-actions.log)
# BOT_LOG_FILE=bot-actions.log

# API ключ OpenAI (опціонально, для генерації зображень через MCP)
# OPENAI_API_KEY=sk-proj-xxx

# Email повідомлення про нові заявки (опціонально)
# EMAIL_ENABLED=true
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_TO=admin1@example.com,admin2@example.com
